<script type="text/javascript">


  var all = ['0','1','2','3','5','8','13','21','34','55','101','102']
  var width = get(0).width
  var height = get(0).height
  var clickTracker = 0;
  function get(b){
    return document.getElementById(b)
  }
  function select(card){
    clickTracker++;
    (clickTracker%2 == 1)? showOne(card):(showAll(card));
  }
  function showOne(card){
    // first hide all
    for (var i = 0; i < all.length; i++) {
      get(all[i]).hidden = true;
    }
    // then just show one
    get(card).hidden = false;
    // and resize it to be huge!
    // Enlargen the image
    get(card).width += get(card).width * 1.8
    // get(card).height += get(card).height * 1

    //hide the title
    // get(title).hidden = true
  }
  function showAll(card){
    //shrink the image
    get(card).width = width
    // show the title
    // get(title).hidden = false
    // Show all of the cards
    for (var i = 0; i < all.length; i++) {
      get(all[i]).hidden = true;
      get(all[i]).hidden = false;
    }
  }
  function hideTitle(){
    get("title").hidden = true
  }
  setTimeout(hideTitle,3000)
</script>
