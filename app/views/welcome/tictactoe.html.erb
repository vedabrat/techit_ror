<script>
var count = 1;
var grid = [0,0,0,0,0,0,0,0,0];

function newGame(){
  for (var i = 1; i<10;i++){
    document.getElementById(i).src = "../img/blank.png";
    grid[i-1] = 0
  }
}
// this function updates the virtual grid
function gridupdate(){
  for( i=0;i<9;i++){
    grid[i] = document.getElementById(i+1).value ;
  }
}
function updatestatus(msg){
  document.getElementById('status').innerHTML = msg ;
}

function playerMove(space){
  if (document.getElementById(space).src ==  "../img/blank.png"){
    if (count % 2 == 1){
      document.getElementById(space).src = "../img/X.png" ;
      document.getElementById(space).value = 2 ;
      count++;
      updatestatus("O's turn");}
    else {
      document.getElementById(space).src = "../img/O.png" ;
      document.getElementById(space).value = 1 ;
      count++;
      updatestatus("X's turn");
    }
    gridupdate();
  }
  console.log (grid);
  console.log (count);
}



</script>
